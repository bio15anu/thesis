library(edgeR)
library(DESeq2)

data = read.table("/home/adam/Documents/ThesisDocs/repository/Documents/Data/DiffExpr/../Assembly/Matrices/genes/matrix.counts.matrix", header=T, row.names=1, com='')
col_ordering = c(11,12,13,3,4)
rnaseqMatrix = data[,col_ordering]
rnaseqMatrix = round(rnaseqMatrix)
rnaseqMatrix = rnaseqMatrix[rowSums(cpm(rnaseqMatrix) > 1) >= 2,]
conditions = data.frame(conditions=factor(c(rep("coni", 3), rep("para", 2))))
rownames(conditions) = colnames(rnaseqMatrix)
ddsFullCountTable <- DESeqDataSetFromMatrix(
    countData = rnaseqMatrix,
    colData = conditions,
    design = ~ conditions)
dds = DESeq(ddsFullCountTable)
contrast=c("conditions","coni","para")
res = results(dds, contrast)
baseMeanA <- rowMeans(counts(dds, normalized=TRUE)[,colData(dds)$condition == "coni"])
baseMeanB <- rowMeans(counts(dds, normalized=TRUE)[,colData(dds)$condition == "para"])
res = cbind(baseMeanA, baseMeanB, as.data.frame(res))
res = cbind(sampleA="coni", sampleB="para", as.data.frame(res))
res$padj[is.na(res$padj)]  <- 1
write.table(as.data.frame(res[order(res$pvalue),]), file='matrix.counts.matrix.coni_vs_para.DESeq2.DE_results', sep='	', quote=FALSE)
write.table(rnaseqMatrix, file='matrix.counts.matrix.coni_vs_para.DESeq2.count_matrix', sep='	', quote=FALSE)
source("/home/adam/bin/trinityrnaseq-Trinity-v2.4.0/Analysis/DifferentialExpression/R/rnaseq_plot_funcs.R")
pdf("matrix.counts.matrix.coni_vs_para.DESeq2.DE_results.MA_n_Volcano.pdf")
plot_MA_and_Volcano(log2(res$baseMean+1), res$log2FoldChange, res$padj)
dev.off()
